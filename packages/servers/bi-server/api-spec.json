{
  "openapi": "3.0.3",
  "info": {
    "title": "Nodash BI Server",
    "description": "Business intelligence and data analytics server",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.nodash.ai/bi",
      "description": "Production BI server"
    }
  ],
  "paths": {
    "/dashboards": {
      "get": {
        "operationId": "getDashboards",
        "summary": "Get available dashboards",
        "responses": {
          "200": {
            "description": "List of dashboards"
          }
        }
      }
    },
    "/reports/{reportId}": {
      "get": {
        "operationId": "getReport",
        "summary": "Get a specific report",
        "parameters": [
          {
            "name": "reportId",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Report data"
          }
        }
      }
    }
  }
}
