{
  "openapi": "3.0.3",
  "info": {
    "title": "Nodash Monitoring Server",
    "description": "Application performance monitoring and error tracking server",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.nodash.ai/monitoring",
      "description": "Production monitoring server"
    }
  ],
  "paths": {
    "/errors": {
      "post": {
        "operationId": "reportError",
        "summary": "Report an application error",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ErrorReport"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Error reported successfully"
          }
        }
      }
    },
    "/metrics": {
      "post": {
        "operationId": "submitMetrics",
        "summary": "Submit performance metrics",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MetricsData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Metrics submitted successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorReport": {
        "type": "object",
        "required": ["message", "projectId"],
        "properties": {
          "message": { "type": "string" },
          "projectId": { "type": "string" },
          "stack": { "type": "string" }
        }
      },
      "MetricsData": {
        "type": "object",
        "required": ["projectId", "metrics"],
        "properties": {
          "projectId": { "type": "string" },
          "metrics": { "type": "object" }
        }
      }
    }
  }
}
