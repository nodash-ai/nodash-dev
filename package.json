{
  "name": "@nodash/backend",
  "version": "1.0.0",
  "description": "Nodash Analytics Backend - Scalable analytics platform with adapter-based storage",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "nodash-backend": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec 'node --loader ts-node/esm src/index.ts'",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest test/adapters test/config --run",
    "test:integration": "vitest test/integration --run",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "ci": "npm run typecheck && npm run test:unit && npm run test:integration"
  },
  "keywords": [
    "analytics",
    "backend",
    "nodash",
    "multi-tenant"
  ],
  "author": "Nodash",
  "license": "MIT",
  "dependencies": {
    "@nodash/sdk": "^0.1.5",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.10.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
